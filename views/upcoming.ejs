<% layout('layouts/boilerplate') %>

<h1>Upcoming Events</h1>

<% for (let event of user.attending) { %>
    <div class="card bg-transparent border mb-2">
        <div class="card-body">
            <h5 class="card-title">
                <%= event.title %>
            </h5>
            <h6 class="card-subtitle mb-2 text-muted">From <%= event.start %> to <%= event.end %></h6>
            <p class="card-text">
                <%= event.description %>
            </p>
            <a href="/cca/<%= event.cca %>/events/<%= event._id %>" class="card-link btn btn-sm btn-outline-primary">View More</a>
        </div>
    </div>
<% } %> 