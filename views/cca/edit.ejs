<% layout('layouts/boilerplate') %>
<h1>Edit CCA Information</h1>
<form action="/cca/<%= cca._id %>?_method=PUT" method="POST">
    <div class="mb-3">
        <label for="title" class="form-label">CCA Title:</label>
        <input type="text" name="cca[title]" id="title" class="form-control" required value="<%= cca.title %>">
    </div>
    <div class="mb-3">
        <label for="description" class="form-label">Short Description:</label>
        <textarea name="cca[description]" id="description" cols="30" rows="5" class="form-control"><%= cca.description%> </textarea>
    </div>
    <h2>Contact Information</h2>
    <div class="mb-3">
        <label for="phone" class="form-label">Phone Number:</label>
        <input type="text" name="cca[phone]" id="phone" required value="<%= cca.phone %>" class="form-control">
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">E-mail:</label>
        <input type="email" name="cca[email]" id="email" required value="<%= cca.email %>" class="form-control">
    </div>
    <div class="mb-3">
        <label for="officer" class="form-label">Person-in-Charge:</label>
        <input type="text" name="cca[officer]" id="officer" required value="<%= cca.officer %>" class="form-control">
    </div>
    <button class="btn btn-outline-warning mb-3">Update</button>
</form>
<a href="/cca" class="btn btn-outline-danger btn-sm">Back to CCA List</a>