<% layout('layouts/boilerplate') %>
<h1>Edit Event</h1>
<form action="/cca/<%= event.cca._id %>/events/<%= event._id %>?_method=PUT" method="POST">
    <div>
        <label for="title">Event Title:</label>
        <input type="text" name="event[title]" id="title" value="<%= event.title %>" required>
    </div>
    <div>
        <label for="description">Event Description:</label>
        <textarea name="event[description]" id="description" cols="30" rows="5"><%= event.description %></textarea>
    </div>
    <div>
        <label for="start">From:</label>
        <input type="text" name="event[start]" id="start" placeholder="dd/mm/yy hh.mm" value="<%= event.start %>" required>
    </div>
    <div>
        <label for="end">To:</label>
        <input type="text" name="event[end]" id="end" placeholder="dd/mm/yy hh.mm" value="<%= event.end %>" required>
    </div>
    <button>Update Event</button>
</form>
<a href="/cca/<%= event.cca._id %>/events/<%= event._id %> ">Back to Event</a>